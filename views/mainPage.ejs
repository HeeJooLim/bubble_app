<body>
    <div class="container">
        <h3 class=" text-center">Messaging</h3>
        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading">
                            <h4>Recent</h4>
                        </div>
                        <div class="srch_bar">
                            <div class="stylish-input-group">
                                <input type="text" class="search-bar" placeholder="Search">
                                <span class="input-group-addon">
                                    <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                                </span> </div>
                        </div>
                    </div>
                    <div class="inbox_chat scollCls">
                        <% for(var i = 0; i < data.length; i++){ %>
                        <div class="chat_list" data-roomId="<%= data[i]._id %>">
                            <div class="chat_people" >
                                <div class="chat_img"> <img src="<%= data[i].user_img %>" alt="sunil"> </div>
                                <div class="chat_ib">
                                    <h5><%= data[i].user_nm %></strong><span class="chat_date">Dec 25</span></h5>
                                    <p>üì¢ ÏïàÎÖïÌïòÏÑ∏Ïöî Ïó¨Îü¨Î∂Ñ </p>
                                    <!-- active_chat -->
                                </div>
                            </div>
                        </div>

                        <% } %>

                    </div>
                </div>
                <div class="mesgs">
                    <div class="msg_history"></div>
                    <div class="type_msg">
                        <div class="input_msg_write">
                            <input type="text" id="message" class="write_msg input_msg" placeholder="Î©îÏÑ∏ÏßÄÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî"/>
                            <button class="msg_send_btn input_msg" type="button" onclick="send()"><i class="fa fa-paper-plane-o" aria-hidden="true" ></i></button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/mainPage.js"></script>
    <script>

        let roomId;
        var room;
        var name;

        $(".chat_list").off().on("click",function(){
            socket.emit("leave", { room: room });
            $(".chat_list").removeClass("active_chat")
            $(this).addClass("active_chat");
            
            roomId = $(this).attr("data-roomid");
            room = $(this).attr("data-roomid");

            $(".msg_history").html("");


            var roomId = room;
            // Ï±ÑÌåÖÎ∞© Ï†ëÏÜç
            socket.emit("enter", { room: room });

            $.ajax({
                url: "/chatting/" + roomId + "/chat2",
                dataType: "json",
                type: "GET",
                data: { roomId : roomId },
                success: function (data) {

                 var info = data.data;
                 name = info.room;
                 var data_msg = data.data_msg;
                console.log(data_msg)
                 data_msg.forEach(msg => {
                     if(msg.sender != msg.roomId) { // ÏÇ¨Ïö©ÏûêÍ∞Ä Î≥¥ÎÉÑ
                        userHtml(msg);
                     } else { // ÏïÑÌã∞Ïä§Ìä∏Í∞Ä Î≥¥ÎÉÑ
                        artistHtml(msg);
                     }
                 });
                 $('.msg_history').scrollTop($(".msg_history")[0].scrollHeight);
                
                },
            });

        });

        function userHtml(data){
           
            var html = '<div class="outgoing_msg"><div class="sent_msg"><p>'
            html += data.message;
            html += '</p><span class="time_date">'
            html += moment(data.createdAt).format("MMM Do YY");
            html += '</span></div></div>';

            $(".msg_history").append(html);
        }

        function artistHtml(data){

            var html = '<div class="incoming_msg"><div class="incoming_msg_img"><img src="';
            html += data.roomImg ? data.roomImg : '';
            html += '" alt="ÏÇ¨ÏßÑ"></div><div class="received_msg"><div class="received_withd_msg"><p>'
            html += data.message;
            html += '</p><span class="time_date">';
            html += moment(data.createdAt).format("MMM Do YY");
            html += '</span></div></div></div>';
            $(".msg_history").append(html);
        }


    </script>
</body>

</html>